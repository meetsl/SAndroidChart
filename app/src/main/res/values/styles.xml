<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CircleProgressStyle">
        <attr name="rank_progress" format="integer"/>
        <attr name="totalAngle" format="integer"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="outerRadius" format="dimension"/>
        <attr name="innerRadius" format="dimension"/>
        <attr name="secondProgressColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="progressUnit" format="string"/>
        <attr name="date" format="string"/>
        <attr name="location" format="string"/>
        <attr name="desc" format="string"/>
        <attr name="progressTextColor" format="color"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressUnitTextColor" format="color"/>
        <attr name="progressUnitTextSize" format="dimension"/>
        <attr name="dateTextSize" format="dimension"/>
        <attr name="dateTextColor" format="color"/>
        <attr name="dateMarginTop" format="dimension"/>
        <attr name="locationTextSize" format="dimension"/>
        <attr name="locationTextColor" format="color"/>
        <attr name="locationMarginTop" format="dimension"/>
        <attr name="descTextSize" format="dimension"/>
        <attr name="descTextColor" format="color"/>
        <attr name="descMarginTop" format="dimension"/>
    </declare-styleable>
</resources>
